<div class="container services">
  <div class="row">
    <div class="col-lg-12 text-center">
      <h2 class="section-heading text-uppercase">Services</h2><hr><br>
    </div>
  </div>
  <div class="row text-center">
    <% @services.each do |service| %>
      <div class="col-md-4">
        <span class="fa-stack fa-4x">
          <% if service.image.attached? %>
            <div class="service-image">
              <%= link_to image_tag(service.image, :class => "mx-auto rounded-circle"), service %>
            </div>
          <% else %>
            <%= link_to service do %>
              <i class="fas fa-circle fa-stack-2x text-primary"></i>
              <i class="fas fa-shopping-cart fa-stack-1x fa-inverse"></i>
            <% end %>
          <% end %>
        </span>
        <h4 class="service-heading"><%= link_to service.name, service %></h4>
        <p class="text-muted"><%= service.description.truncate(130).html_safe %></p>
      </div>
    <% end %>  
  </div>
</div>