<%= form_with model: @contact_request, url: contact_requests_path do |form| %>
  <section class="page-section" id="contact">
    <div class="container">
      <div class="row">
        <div class="col-lg-12 text-center">
          <h2 class="section-heading text-uppercase">Contact Us</h2>
          <h3 class="section-subheading text-muted">Lorem ipsum dolor sit amet consectetur.</h3>
        </div>
      </div>
      <div class="row">
        <div class="col-lg-12">
          <form id="contactForm" name="sentMessage" novalidate="novalidate">
            <div class="row">
              <div class="col-md-6">
                <div class="form-group">
                  <div>
                    <%= form.text_field :u_name, :class => "field form-control", :id => "name", :type => "text", :placeholder => "Your Name *", :required => "required" %>
                  </div>
                  <p class="help-block text-danger"></p>
                </div>
                <div class="form-group">
                  <div>
                    <%= form.text_field :u_email, :class => "field form-control", :id => "name", :type => "text", :placeholder => "Your Email *", :required => "required" %>
                  </div>
                  <p class="help-block text-danger"></p>
                </div>
                <div class="form-group">
                  <div>
                    <%= form.text_field :u_tel, :class => "field form-control", :id => "name", :type => "text", :placeholder => "Your Tel *", :required => "required" %>
                  </div>
                  <p class="help-block text-danger"></p>
                </div>
              </div>
              <div class="col-md-6">
                <div class="form-group">
                  <div>
                    <%= form.text_area :u_message, :class => "form-control field", :id => "message", :placeholder => "Your Message *", :required => "required" %>
                  </div>
                  <p class="help-block text-danger"></p>
                </div>
              </div>
              <div class="clearfix"></div>
              <div class="col-lg-12 text-center">
                <div id="success"></div>
                <div class="actions">
                  <%= form.submit "SEND", :id => "sendMessageButton", :class => "btn btn-primary btn-xl text-uppercase", :redirect_to => :root %>
                </div>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </section>
  <% end %>